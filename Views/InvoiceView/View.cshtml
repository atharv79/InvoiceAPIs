@model InvoiceAPI.Models.Invoice

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice @Model.InvoiceNumber</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
            padding: 40px;
        }

        .invoice-box {
            max-width: 800px;
            background: #fff;
            padding: 30px;
            margin: auto;
            border: 1px solid #ddd;
        }

        h2 {
            margin-bottom: 5px;
        }

        .header {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background: #333;
            color: white;
        }

        .total {
            text-align: right;
            margin-top: 20px;
        }

        .total h3 {
            margin: 5px 0;
        }
    </style>
</head>

<body>
    <div class="invoice-box">
        <div class="header">
            <h2>Invoice: @Model.InvoiceNumber</h2>
            <p>Date: @Model.InvoiceDate</p>
            <p><strong>Customer:</strong> @Model.CustName</p>
            <p><strong>Email:</strong> @Model.CustEmail</p>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Qty</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Desc</td>
                        <td>@item.Quantity</td>
                        <td>₹ @item.Price</td>
                        <td>₹ @item.ItemTotal</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total">
            <h3>Subtotal: ₹ @Model.Total</h3>
            <h3>Tax (18%): ₹ @Model.Tax</h3>
            <h2>Grand Total: ₹ @Model.FinalTotal</h2>
        </div>
    </div>
</body>
</html>